<!DOCTYPE html>
<html>
  <head>
    <title>ConversionRoulette</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'application', media: 'all' %>
  </head>

  <body>
    <div class='container'>
      <% if notice.present? %>
        <div class="alert alert-primary" role="alert">
          <%= notice %>
        </div>
      <% end %>

      <% if alert.present? %>
        <div class="alert alert-danger" role="alert">
          <%= alert %>
        </div>
      <% end %>

      <%= yield %>
    </div>

    <%= javascript_include_tag 'application' %>
  </body>
</html>
